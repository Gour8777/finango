<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVerdictTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cashflow\n(This month vs last month)"
                    android:letterSpacing=".05"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvVerdictLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:text="â€”"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/aqua_primary" />
            </LinearLayout>


        <!-- Income Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/income_card"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvIncomeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Money Earned This Month"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvIncomeAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:text="â‚¹0"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvIncomeChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="_"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <!-- Simple % bar vs last month -->
                <ProgressBar
                    android:id="@+id/pbIncomeVsLast"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="10dp"
                    android:progress="0"
                    android:max="200"
                    android:progressTint="@color/income_end"
                    android:backgroundTint="#E5E7EB" />

                <TextView
                    android:id="@+id/tvIncomeSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="You earned more than last month."
                    android:textSize="13sp"
                    android:textColor="#4B5563" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Expense Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/expense_card"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvExpenseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¸ Money Spent This Month"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvExpenseAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:text="â‚¹0"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvExpenseChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="â€”"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <ProgressBar
                    android:id="@+id/pbExpenseVsLast"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="10dp"
                    android:progress="0"
                    android:max="200"
                    android:progressTint="@color/income_end"
                    android:backgroundTint="#E5E7EB" />

                <TextView
                    android:id="@+id/tvExpenseSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="You spent more than last month."
                    android:textSize="13sp"
                    android:textColor="#4B5563" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
