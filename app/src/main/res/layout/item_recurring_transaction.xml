<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_input"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <!-- Icon -->
        <ImageView
            android:id="@+id/recurringcategory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/foodanddrink"
            android:background="@drawable/bg_icon_income"
            android:padding="8dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/recurringtitle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Temple Donation"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/black"
            android:gravity="center_vertical" />

        <!-- Amount section aligned to end -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/recrringcurrency"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/rupee"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/recurringamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1787387"
                android:textSize="16sp"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/frequencytv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:textColor="@color/grey"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
        
        <TextView
            android:id="@+id/recurringenddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date-25/11/2025"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/recurringduedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date-25/11/2025"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <!-- Status -->
        <TextView
            android:id="@+id/recurringstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_icon_income"
            android:text="Active"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/black"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp" />

        <!-- Edit / Delete aligned to end -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recurringedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/aqua_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <ImageButton
                android:id="@+id/recurringdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/delete_24"
                android:padding="8dp"
                android:contentDescription="Delete" />
        </LinearLayout>
    </LinearLayout>






</LinearLayout>